{
  "name": "craigponent-library",
  "version": "0.1.0",
  "private": true,
  "description": "React Component Library for UI consistency between repositories",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=10.9.0"
  },
  "scripts": {
    "build": "node ./scripts/buildDist && rollup -c",
    "build:web": "docz build",
    "dev": "yarn start",
    "lint": "eslint ./src",
    "plop": "plop",
    "start": "docz dev",
    "stylelint": "stylelint ./src",
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:coverage": "yarn test --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "watch": "rollup -c -w",
    "x": "node ./scripts/buildDist"
  },
  "dependencies": {
    "react-recipes": "^0.1.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "colors": "^1.3.3",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "docz": "^2.0.0-rc.41",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^2.2.0",
    "inquirer-directory": "^2.2.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "plop": "^2.5.3",
    "prettier": "^1.15.2",
    "react": "^16.11.0",
    "react-component-component": "^1.2.1",
    "react-dom": "^16.11.0",
    "react-dropzone": "^10.1.10",
    "react-scripts": "^3.2.0",
    "react-swipeable": "^5.4.0",
    "react-transition-group": "^2.5.3",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-url": "^3.0.0",
    "sass-loader": "^8.0.0",
    "scheduler": "^0.17.0",
    "stylelint": "^15.10.1",
    "stylelint-config-css-modules": "^2.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.12.1",
    "stylelint-webpack-plugin": "^1.0.3",
    "uniqid": "^5.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/icons/**",
      "!**/utils/**",
      "!src/index.js",
      "!src/setupTests.js"
    ]
  },
  "files": [
    "dist"
  ]
}
